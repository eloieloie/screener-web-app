{
  "name": "screener-backend-cf",
  "version": "1.0.0",
  "description": "Screener Web App Backend - Google Cloud Function",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "functions-framework --target=screenerApi --port=8080",
    "deploy": "gcloud functions deploy screenerApi --runtime nodejs18 --trigger-http --allow-unauthenticated --env-vars-file .env.yaml",
    "deploy-gen2": "gcloud functions deploy screenerApi --gen2 --runtime=nodejs18 --region=us-central1 --source=. --entry-point=screenerApi --trigger-http --allow-unauthenticated --env-vars-file .env.yaml",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "zerodha",
    "kiteconnect",
    "stock",
    "api",
    "google-cloud-function",
    "serverless"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "kiteconnect": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "memorystore": "^1.6.7"
  },
  "engines": {
    "node": "18"
  }
}